@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa bài Reading";
}


<div class="text-center" style="padding-top: 20px;">
    <h2>Chỉnh sửa bài đọc hiểu và nội dung bài đọc hiểu</h2>
</div>
<div class="container">
    <div class="row border border-info rounded p-4">
        <div class="col-6 offset-3">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <form method="post" href="/AdminRead/Edit" enctype="multipart/form-data">
                <div>
                    <label> Nhập tên bài đọc hiểu </label>
                    <input type="text" name="readName" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label for="levelDropdown">Chọn Level (1,2):</label>
                    <select id="levelDropdown" name="selectedLevel" class="form-control">
                        <option value="1">Level 1</option>
                        <option value="2">Level 2</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="partDropdown">Chọn Part (5,6,7):</label>
                    <select id="partDropdown" name="selectedPart" class="form-control">
                        <option value="5">Part5</option>
                        <option value="6">Part6</option>
                        <option value="7">Part7</option>
                    </select>
                </div>

                <div class="form-group">
                    <label> Thêm ảnh cho bài đọc hiểu</label>
                    <input type="file" name="imageFile" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Thêm nội dung bài đọc hiểu (File Excel)</label>
                    <input type="file" name="excelFile" class="form-control" accept=".csv,.xls,.xlsx" />
                </div>
                <div class="form-group">
                    <label> Thêm ảnh cho nội dung bài đọc hiểu</label>
                    <input type="file" name="imagesFile" class="form-control" multiple />
                </div>

                <button type="button" class="btn btn-danger" onclick="CancelRFunction()">Cancel</button>
                <input type="submit" class="btn btn-sm btn-primary float-right" value="Submit" />
            </form>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function CancelRFunction() {
        window.location.href = '/AdminRead';
    }

</script>