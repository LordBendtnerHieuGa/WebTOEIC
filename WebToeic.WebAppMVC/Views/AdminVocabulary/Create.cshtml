@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm bài Vocabulary";
}


<div class="text-center" style="padding-top: 20px;">
    <h2>Thêm mới bài từ vựng và nội dung bài từ vựng</h2>
</div>
<div class="container">
    <div class="row border border-info rounded p-4">
        <div class="col-6 offset-3">
            <form method="post" href="/AdminVocabulary/Create" enctype="multipart/form-data">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div>
                    <label> Nhập tên bài từ vựng </label>
                    <input type="text" name="vocabularyName" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Thêm ảnh cho bài từ vựng</label>
                    <input type="file" name="imageFile" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Thêm nội dung bài từ vựng (File Excel)</label>
                    <input type="file" name="excelFile" class="form-control" accept=".csv,.xls,.xlsx" />
                </div>
                <div class="form-group">
                    <label> Thêm ảnh cho nội dung bài từ vựng</label>
                    <input type="file" name="imagesFile" class="form-control" multiple/>
                </div>
                <div class="form-group">
                    <label> Thêm audio (mp3) cho nội dung bài từ vựng</label>
                    <input type="file" name="audiosFile" class="form-control" multiple />
                </div>

                <button type="button" class="btn btn-danger" onclick="CancelVFunction()">Cancel</button>
                <input type="submit" class="btn btn-sm btn-primary float-right" value="Upload" />
            </form>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function CancelVFunction() {
        window.location.href = '/AdminVocabulary';
    }

</script>