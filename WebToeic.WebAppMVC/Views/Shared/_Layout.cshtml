    <!-- Version Tech CSS for this template -->
    <link href="~/cssHome/version/tech.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div id="wrapper">
        <header class="tech-header header">
            <div class="container-fluid">
                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="tech-index.html"><img src="~/imagesHome/favicon.png" alt=""></a>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/WebToeicF/Listens">Luyện bài nghe</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/WebToeicF/Reads">Luyện bài đọc</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/WebToeicF/Grammars">Ngữ pháp</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/WebToeicF/Vocabularies">Từ vựng</a>
                            </li>
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/WebToeicF/Exams">Thi thử</a>
                                </li>
                            } else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Thi thử</a>
                                </li>
                            }
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminHome" asp-action="Index">Trang Quản lí</a>
                                </li>
                                @*<li class="nav-item">
                                    <a class="nav-link" asp-controller="Information" asp-action="EditInfor">Thông tin cá nhân</a>
                                </li>*@
                            }                                                       

                        </ul>
                      

                        <partial name="_LoginPartial"></partial>
                    </div>
                </nav>
            </div><!-- end container-fluid -->
        </header><!-- end market-header -->

        @RenderBody()

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="widget">
                            <div class="footer-text text-left">
                                <a href="index.html"><img src="images/version/tech-footer-logo.png" alt="" class="img-fluid"></a>
                                <p>WebToeic is a test Toeic website, we sharing listening, reading, grammar, vocabulary, mini test.</p>
                                <hr class="invis">

                                @*<div class="newsletter-widget text-left">
                                    <form class="form-inline">
                                        <input type="text" class="form-control" placeholder="Enter your email address">
                                        <button type="submit" class="btn btn-primary">SUBMIT</button>
                                    </form>
                                </div><!-- end newsletter -->*@
                            </div><!-- end footer-text -->
                        </div><!-- end widget -->
                    </div><!-- end col -->

                    <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                        <div class="widget">
                            <h2 class="widget-title">Danh mục</h2>
                            <div class="link-widget">
                                <ul>
                                    <li><a href="#">Luyện bài nghe<span>(21)</span></a></li>
                                    <li><a href="#">Luyện bài đọc<span>(15)</span></a></li>
