                                    <li><a href="#">Thi thử<span>(66)</span></a></li>
                                </ul>
                            </div><!-- end link-widget -->
                        </div><!-- end widget -->
                    </div><!-- end col -->

                </div>
            </div><!-- end container -->
        </footer><!-- end footer -->

        <div class="dmtop">Scroll to Top</div>

    </div><!-- end wrapper -->
    <!-- Core JavaScript
    ================================================== -->
    <script src="~/jsHome/jquery.min.js"></script>
    <script src="~/jsHome/tether.min.js"></script>
    <script src="~/jsHome/bootstrap.min.js"></script>
    <script src="~/jsHome/custom.js"></script>

</body>
</html>