@using Microsoft.AspNetCore.Identity;
@using WebToeic.WebAppMVC.Data.Entities;
@inject SignInManager<User> signInManager
@inject UserManager<User> userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Administration</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script href="~/cssEditInfor/stylesEditInfor.css"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">WebToeic</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            
        @if (signInManager.IsSignedIn(User))
        {
            <li class="nav-item">
            <a class="nav-link" >Helllo @userManager.GetUserName(User)</a>
            </li>
        }
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    @*<li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>*@
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-action="Login" asp-controller="Account">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Danh Mục</div>
                        <a class="nav-link collapsed" asp-action="Index" asp-controller="AdminListen">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Quản lí Bài nghe

                        </a>

                        <a class="nav-link collapsed" asp-action="Index" asp-controller="AdminRead">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Quản lí Bài đọc

                        </a>

                        <a class="nav-link" asp-action="Index" asp-controller="AdminExam">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Quản lí Đề thi
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminGrammar">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Quản lí Bài Ngữ pháp
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminVocabulary">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Quản lí Bài Từ vựng
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminAcc">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Quản lí Tài khoản
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminRole">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Quản lí Quyền người dùng (Roles)
                        </a>
                        <a class="nav-link" asp-route-id="@userManager.GetUserId(User)" asp-controller="Information" asp-action="EditInfor">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Thông tin cá nhân
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminCmtGrammar">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            QL Bình luận Grammar
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminCmtListen">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            QL Bình luận Listening
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminCmtVoca">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            QL Bình luận Vocabulary
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminCmtRead">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            QL Bình luận Readings
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    WebToeicApp
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; WebToeicApp 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
</body>
</html>
