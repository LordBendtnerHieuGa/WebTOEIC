@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa bài Grammar";
}


<div class="text-center" style="padding-top: 20px;">
    <h2>Chỉnh sửa bài Ngữ pháp</h2>
</div>
<div class="container">
    <div class="row border border-info rounded p-4">
        <div class="col-6 offset-3">
            <form method="post" asp-action="Edit" asp-controller="AdminGrammar" enctype="multipart/form-data">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div class="form-group">
                    <label>Thay đổi bài Ngữ pháp (File Excel)</label>
                    <input type="file" name="formFile" class="form-control" accept=".csv,.xls,.xlsx" required/>
                </div>
                <div class="form-group">
                    <label>Thêm ảnh bài Ngữ pháp</label>
                    <input type="file" name="imagesFile" class="form-control" multiple />
                </div>

                <button type="button" class="btn btn-danger" onclick="CancelGFunction()">Cancel</button>
                <input type="submit" class="btn btn-sm btn-primary float-right" value="Submit" />
            </form>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function CancelGFunction() {
        window.location.href = '/AdminGrammar';
    }

</script>
