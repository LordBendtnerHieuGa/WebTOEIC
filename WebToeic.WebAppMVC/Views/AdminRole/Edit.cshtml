
@using WebToeic.WebAppMVC.ViewModels
@model EditRoleVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa Quyền người dùng";
}

<div class="text-center" style="padding-top: 20px;">
    <h2>Chỉnh sửa Quyền người dùng</h2>
</div>

<div class="container">
    <div class="row border border-info rounded p-4">
        <div class="col-6 offset-3">
            <form method="post" href="/AdminRole/Edit/{id}" enctype="multipart/form-data">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleDescription"></label>
                    <input asp-for="RoleDescription" class="form-control" />
                    <span asp-validation-for="RoleDescription" class="text-danger"></span>
                </div>
                

                <div class="form-group">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5>Danh sách người dùng có quyền này</h5>
                    </div>
                    <div class="card-body">
                        @if (Model != null && Model.Users != null && Model.Users.Any())
                        {
                            foreach(var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">Hiện tại không có!</h5>
                        }
                    </div>
                    @if (Model != null && Model.Users != null && Model.Users.Any())
                    {
                        <div class="card-footer">
                            <a asp-action="EditUsersInRole" asp-controller="AdminRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Thêm hoặc Xoá người dùng khỏi Role này </a>
                        </div>
                    }
                </div>

                
            </form>
        </div>

    </div>
</div>