@model WebToeic.WebAppMVC.ViewModels.InforVM
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thông tin tài khoản";
}

<form method="post" asp-action="Edit" asp-controller="AdminAcc">
    <div class="container rounded bg-white mt-5 mb-5">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="row">
            <div class="col-md-3 border-right">
               
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin tài khoản </h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels" asp-for="UserName">UserName</label>
                            <input type="text" class="form-control" asp-for="UserName">
                            
                        </div>

                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels" asp-for="PhoneNumber">Phone Number</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber">
                        </div>
                        <div class="col-md-12">
                            <label class="labels" asp-for="Address">Address</label>
                            <input type="text" class="form-control" asp-for="Address">
                        </div>
                        <div class="col-md-12">
                            <label class="labels" asp-for="DOB">Date Of Birth</label>
                            <input type="text" class="form-control" asp-for="DOB">
                        </div>
                        <div class="col-md-12">
                            <label class="labels" asp-for="Email">Email</label>
                            <input type="text" class="form-control" asp-for="Email">
                        </div>
                       
                    </div>

                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">
                            Save Profile

                        </button>
                        <button type="button" class="btn btn-danger" onclick="CancelUFunction()">Cancel</button>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function CancelUFunction() {
        window.location.href = '/AdminAcc';
    }

</script>

